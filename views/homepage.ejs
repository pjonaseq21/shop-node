<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Strona główna</title>
</head>
<body>
    <div id="header">
        <a href="/">
        <img src="/images/pobrane.png" alt="" id="logo">
    </a>
        <h2 id="header-h2" class="mx-5">Sklep z suplementami</h2>


        



        <% if(data == true && admin == true){ %>
        <div id="login-register">
            <a href="/logout" class="btn btn-danger">Wyloguj</a>
           <a id="username" href="/admin" class="btn btn-success"> <div > <%= name %></div></a>
         </div>
         <span> 
            <strong>
                (<%= cart %>)
            </strong>

            </span>
         <% } %>

    
        <% if(data == true && admin == false){ %>
            <div id="login-register">
                <a href="/logout" class="btn btn-danger">Wyloguj</a>
                <div id="username" > <%= name %></div>
             </div>
             <span> 
            <strong>
                (<%= cart %>)
            </strong>
            </span>
            <% } %>
           <% if (data==false){ %>

        <div id="login-register">
          <a class="btn btn-success" onclick="sweetalert2()" id="login">Zaloguj się</a>
        </div>
            <% } %>
            <a href="/cart">

            <div>
                <img id="shopping-cart" src="/images/cart.jpg" alt="">
            
            </div>
        </a>

    </div>


    <div id="header-nav">
        <nav>
            <a href="/kreatyna" id="nav-item">Kreatyna</a>
            <a href="/bialko"  id="nav-item">Białko</a>
            <a href="/cytrulina"  id="nav-item">Cytrulina</a>
            <a href="/przedtreningowka" id="nav-item" >Przedtreningowka</a>
        </nav>
    </div>
    <div id="img-cont"><img src="/images/Screenshot_124.png"id="dog-adv" alt=""></div>

    <div id="main">
        <% products.forEach((product) =>{ %>
        <div id="products">
            <form action="/addproduct" method="post">

            <img src="/images/<%= product.photo %>" id="product-photo"><br>
            <input type="hidden" id="product-name" name="product_name" value="<%=  product.name %>">
                <%=  product.name %>
            </input><br>
            <strong>
                <input type="hidden" name="product_price" value="<%=    product.cena %>">
                <%=    product.cena %> zł
            </input>
        </strong><br>
        <% if (data==true){ %>
            <button type="submit" class="btn btn-success"">Dodaj do koszyka</button>

        <% }   %>
    </form>

        <% if (data==false){ %>
        
            <button class="btn btn-success" id="cart-btn" onclick="sweetalert2()">Dodaj do koszyka</button>

         <% } %>

        </div>
        <% }); %> 
      

    </div>
    <%- include('footer.ejs') %>


<style>
    @media screen and (max-width: 800px) {
  #main ,#header,#header-nav,nav     {
    width: 100%;
  }
  #main,#header{
    flex-wrap: wrap; 

  }
  #dog-adv{
    max-width: 50%;
  }
  
  nav,#nav-item{
    align-items: center;
   width: 100%;
    font-size: 0.7rem;
    padding: 0.5rem;
  }
  #main{
    justify-content: center;
  }
}
#img-cont{
    margin: auto;
    display: flex;
    width: 80%;
    align-items: center;
    justify-content: center;

}

#left-side{
    height: 1000px;
    width: 50px;
    float: left;
}
    #shopping-cart{
        width: 50px;
        height: 50px;
    }
    #product-name{
        margin-left: 0.5rem;
        margin-right: 0.5rem;

    }
    #product-photo{
        max-width: 100px;
        min-width: 100px;
        max-height: 100px;
    }
    #products{
        margin: 2rem;
        padding: 1rem;
        border: rgb(104, 111, 122) 0.5px;
        height: 300px;
        border-radius: 10%;
        border-style: solid none solid none;
    }
    #username{
        display: flex;
        margin-left: 2rem;
        align-items: center;
        text-align: center;

    }
    #login-register{
        margin-left: 2rem;
        align-items: center;
        display: flex;
        font-size: 1rem;
        justify-content: center;
        padding: 1rem;
        text-align: center;

    }
    #login{
        text-decoration: none;
        color: white;
        margin: 0 1rem 1rem 0;
    }
    #login-sw2{
        text-decoration: none;
        color: gray;
        margin: 0 1rem 1rem 0;
    }
    #main{
        text-align: center;
        margin: auto;
        margin-top: 2rem;
        flex-wrap: wrap;
        padding: auto;
        display: flex;
        width: 80%;
        height: auto;
        border: 1px solid rgb(81, 106, 143);
        border-style: none solid none solid;
    }
    nav{
        background-color:rgb(81, 106, 143);

        height: 75px;
        justify-content: center;
        display: flex;
        
    }
    #nav-item{
        align-items: center;
        color: white;
        justify-content: center;
        text-decoration: none;
        display: flex;
        height: 100%;
        width: 200px;
        border: 1px white;
        border-style: none solid none solid;
    }
   
    #logo{
        max-width: 100px;
    }
    body{
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }
    #header{
        padding: 1rem;
        align-items: center;
        width: 100%;
        margin: auto;
       display: flex;
       justify-content: center;
        margin-bottom: 1rem;
    }
#header-nav{
    display: flex;
    justify-content: center;
    background-color:rgb(81, 106, 143);
    height: 75px;
    width: 100%;
    margin: auto;

}
#register-btn{
    text-decoration: none;
}
</style>
<script >

    function sweetalert2(){
        Swal.fire({
  title: 'Zaloguj się',
  html: `<input type="text" name="login" id="login-sw2" class="swal2-input" placeholder="Login">
  <input type="password" id="password" name="password" class="swal2-input" placeholder="Hasło"><br><a href="/register" id="register-btn">Zarejestruj się</a>`,
  confirmButtonText: 'Zaloguj',
  focusConfirm: false,
  preConfirm: () => {
    const login = Swal.getPopup().querySelector('#login-sw2').value
    const password = Swal.getPopup().querySelector('#password').value
    if (!login || !password) {
      Swal.showValidationMessage(`Please enter login and password`)
    }
    fetch('https://nodepjonas.bieda.it/login', {
        method:"post",
        headers: {
      'Content-Type': 'application/json'
        },
        body: JSON.stringify({login:login,password:password})
    })
  }
}).then(()=>{
    setTimeout(() => {
  document.location.reload();
}, 1000);
})};

 
   


</script>

</body>
</html>
